
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<head>

</head>

<body>

    <!-- SignIn Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <form method="post", action=@Url.Action("Register", "Home")>
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="checkout__title">ĐĂNG KÝ</h6>
                            <div class="checkout__input">
                                <p>User name<span>*</span></p>
                                <input name="username" type="text" placeholder="Nhập username">
                            </div>
                            <div class="checkout__input">
                                <p>Password<span>*</span></p>
                                <input name="password" type=" text" placeholder="Nhập password">
                            </div>
                            <div class="checkout__input">
                                <p>Confirm Password<span>*</span></p>
                                <input name="confirm_pass" type="text" placeholder="Nhập lại password">
                            </div>
                            <div class="checkout__input">
                                <p>Họ Và Tên<span>*</span></p>
                                <input name="fullname" type="text" placeholder="Nhập họ và tên">
                            </div>
                            <div class="checkout__input">
                                <p>Avatar<span>*</span></p>
                                <button name="avatar" type="submit" class="site-btn">Upload</button>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Số Điện Thoại<span>*</span></p>
                                        <input name="phone" type="text" placeholder="Nhập số điện thoại">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input name="email" type="email" placeholder="Nhập email">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="site-btn">Đăng Ký</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- SignIn Section End -->
</body>

</html>




