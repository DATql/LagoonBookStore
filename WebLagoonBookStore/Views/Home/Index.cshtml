
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
   
</head>

<body>

    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg">
                <img src="~/assets/img/Books/SachMain.jpg" alt="">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">

                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__items set-bg">
                <img src="~/assets/img/Books/bookMain.jpg" alt="">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li>Best Seller</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                @model IEnumerable<dynamic>
                @foreach (var book in Model)
                { <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                <div class="product__item">

                    <div class="product__item__pic set-bg">
                        <img src="~/assets/img/Books/book_1.png" alt="">
                        <span class="label">New</span>
                        <ul class="product__hover">
                            <li><a href="#"><img src="~/assets/img/icon/heart.png" alt=""><span>Yêu Thích</span><span></span></a></li>
                            <li><a href="#"><img src="~/assets/img/icon/compare.png" alt=""><span>So sánh</span></a></li>
                            <li><a href="#"><img src="~/assets/img/icon/search.png" alt=""><span>Tìm Kiếm</span><span></span></a></li>
                        </ul>
                    </div>
                    <form method="post" action="@Url.Action("AddToCart", "Home")">
                        <input type="hidden" name="id" value="@book.id" />
                        <input type="number" name="quantity" value="1" />
                        <button type="submit">+ Thêm vào giỏ hàng</button>
                    </form>
                    <div class="product__item__text">
                        <h6>@book.title</h6>
                        <div class="rating">
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                        <h5>@book.price</h5>
                    </div>

                </div>
            </div>}
            

            </div>
        </div>
    </section>
    <!-- Product Section End -->
    <!-- Categories Section Begin -->
    <section class="categories spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="categories__text">
                        <h2>Siêu Giảm Giá<br /> <span>Mua 1 Tặng 10</span> <br /> Chốt Đơn Ngay</h2>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="categories__hot__deal">
                        <img src="~/assets/img/Books/book_sale.jpg" alt="">
                        <div class="hot__deal__sticker">
                            <span>Sale Of</span>
                            <h5>15.000 VND</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-1">
                    <div class="categories__deal__countdown">
                        <span>Giảm Giá Trong Tuần</span>
                        <h2>Lớp Học Mật Ngữ</h2>
                        <div class="categories__deal__countdown__timer" id="countdown">
                            <div class="cd-item">
                                <span>3</span>
                                <p>Days</p>
                            </div>
                            <div class="cd-item">
                                <span>1</span>
                                <p>Hours</p>
                            </div>
                            <div class="cd-item">
                                <span>50</span>
                                <p>Minutes</p>
                            </div>
                            <div class="cd-item">
                                <span>18</span>
                                <p>Seconds</p>
                            </div>
                        </div>
                        <a href="#" class="primary-btn">Shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->
</body>

</html>


