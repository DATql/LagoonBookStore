<!DOCTYPE html>
<html lang="zxx">

<head>
</head>

<body>

    <!-- SignIn Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <form action="#">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="checkout__title">ĐĂNG KÝ</h6>
                            <div class="checkout__input">
                                <p>User name<span>*</span></p>
                                <input type="text" placeholder="Nhập username">
                            </div>
                            <div class="checkout__input">
                                <p>Password<span>*</span></p>
                                <input type="text" placeholder="Nhập password" ">
